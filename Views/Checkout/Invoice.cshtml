@model ParfumerieOnline.Models.Order
@{
    ViewData["Title"] = "Facture #" + Model.Id;
    Layout = null; // No layout for clean printing
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Facture #@Model.Id - Misk Parfumerie</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            -webkit-print-color-adjust: exact;
        }
        .invoice-container {
            max-width: 800px;
            margin: 2rem auto;
            background: white;
            padding: 3rem;
            box-shadow: 0 0 20px rgba(0,0,0,0.05);
        }
        .invoice-header {
            border-bottom: 2px solid #C5A059;
            padding-bottom: 2rem;
            margin-bottom: 2rem;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }
        .company-name {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            color: #333;
            font-weight: 700;
        }
        .invoice-title {
            font-size: 1.5rem;
            color: #C5A059;
            text-transform: uppercase;
            letter-spacing: 2px;
            margin-bottom: 0.5rem;
        }
        .section-title {
            font-size: 0.9rem;
            text-transform: uppercase;
            color: #777;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        .invoice-table {
            width: 100%;
            margin: 2rem 0;
            border-collapse: collapse;
        }
        .invoice-table th {
            text-align: left;
            padding: 1rem;
            background-color: #f8f8f8;
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.85rem;
            color: #555;
        }
        .invoice-table td {
            padding: 1rem;
            border-bottom: 1px solid #eee;
        }
        .total-section {
            display: flex;
            justify-content: flex-end;
            margin-top: 2rem;
        }
        .total-box {
            width: 300px;
        }
        .total-row {
            display: flex;
            justify-content: space-between;
            padding: 0.5rem 0;
            font-size: 0.95rem;
        }
        .final-total {
            border-top: 2px solid #C5A059;
            margin-top: 0.5rem;
            padding-top: 1rem;
            font-weight: 700;
            font-size: 1.2rem;
            color: #C5A059;
        }
        .print-actions {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }
        .btn-print {
            background-color: #333;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: all 0.3s;
            text-decoration: none;
            display: inline-block;
        }
        .btn-print:hover {
            background-color: #000;
            transform: translateY(-2px);
            color: white;
        }
        .btn-back {
            background-color: white;
            color: #333;
            border: 1px solid #ddd;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin-right: 10px;
        }

        @@media print {
            body { 
                background: white; 
                margin: 0;
            }
            .invoice-container {
                box-shadow: none;
                margin: 0;
                padding: 0;
            }
            .print-actions {
                display: none;
            }
        }
    </style>
</head>
<body>

    <div class="print-actions">
        <a href="/" class="btn-back">Retour</a>
        <button onclick="window.print()" class="btn-print">Imprimer / PDF</button>
    </div>

    <div class="invoice-container">
        <div class="invoice-header">
            <div>
                <div class="company-name">Misk Parfumerie</div>
                <div>123 Avenue des Parfums<br>Paris, France 75001<br>support@misk.com</div>
            </div>
            <div style="text-align: right;">
                <div class="invoice-title">FACTURE</div>
                <div><strong>Date :</strong> @Model.DateCommande.ToString("dd/MM/yyyy")</div>
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-6">
                <div class="section-title">FACTURÉ À</div>
                <div><strong>@Model.User.Nom</strong></div>
                <div>@Model.User.Email</div>
            </div>
            <div class="col-6" style="text-align: right;">
                <div class="section-title">MÉTHODE DE PAIEMENT</div>
                <div>
                    @if(Model.ModePaiement == "carte_bancaire")
                    {
                        <span>Carte Bancaire</span>
                    }
                    else
                    {
                        <span>Paiement à la livraison (Espèces)</span>
                    }
                </div>
            </div>
        </div>

        <table class="invoice-table">
            <thead>
                <tr>
                    <th>Description</th>
                    <th style="text-align: center;">Quantité</th>
                    <th style="text-align: right;">Prix Unitaire</th>
                    <th style="text-align: right;">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Items)
                {
                    <tr>
                        <td>
                            <strong>@item.Product.Nom</strong>
                        </td>
                        <td style="text-align: center;">@item.Quantite</td>
                        <td style="text-align: right;">@item.Prix.ToString("C")</td>
                        <td style="text-align: right;">@((item.Prix * item.Quantite).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total-section">
            <div class="total-box">
                <div class="total-row">
                    <span>Sous-total</span>
                    <span>@Model.Total.ToString("C")</span>
                </div>
                <div class="total-row">
                    <span>Livraison</span>
                    <span>Gratuit</span>
                </div>
                <div class="total-row final-total">
                    <span>Total TTC</span>
                    <span>@Model.Total.ToString("C")</span>
                </div>
            </div>
        </div>

        <div style="margin-top: 4rem; padding-top: 2rem; border-top: 1px solid #eee; font-size: 0.9rem; color: #777; text-align: center;">
            <p>Merci pour votre confiance.</p>

        </div>
    </div>

</body>
</html>
