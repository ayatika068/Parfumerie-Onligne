@model IEnumerable<ParfumerieOnline.Models.Product>

@if (!Model.Any())
{
    <div class="col-12 text-center">
        <p>Aucun produit trouvé.</p>
    </div>
}
else
{
    @foreach (var item in Model)
    {
        <div class="product-card">
            <div class="product-image-container">
            @if (!string.IsNullOrEmpty(item.Image))
            {
                <img src="~/uploads/@item.Image" alt="@item.Nom" class="product-image">
            }
            else
            {
                <img src="https://via.placeholder.com/250x250?text=Parfum" alt="No Image" class="product-image">
            }
            </div>
            
            <div class="product-content">
                <div>
                    <div class="product-category">@item.Category?.Nom</div>
                    <h3 class="product-title">@item.Nom</h3>
                    <div class="product-price">@item.Prix.ToString("0.00") €</div>
                </div>
                
                <div class="product-actions">
                    <a asp-controller="Shop" asp-action="Details" asp-route-id="@item.Id" class="btn-details">Détails</a>
                    <button onclick="addToCart(@item.Id)" class="btn-add">Ajouter</button>
                </div>
            </div>
        </div>
    }
}
